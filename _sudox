#compdef sudox
_arguments -s -S -A '-*' : \
'-'{l,e}'[Clear TMUX/STY from environment]' \
'-p[Ignore ASKPASS]' \
'-s[Start a tmux/screen session]' \
'-S[Start a screen/tmux session]' \
'-H[sudo --set-home (default)]' \
'-T[Do not call script - danger when interactive]' \
'-x[Do not transfer any X authority data]' \
'-u[Generate only an untrusted permission]' \
'-t+[Time valid for untrusted permission]:time:(0)' \
'-U[Delete X remote authority similar to -ut1]' \
'-k[sudo --reset-timestamp]' \
'-K[sudo --remove-timestamp]' \
'-b[sudo --background]' \
'-E[sudo --preserve-env]' \
'-P[sudo --preserve-groups]' \
'-A[sudo --askpass]' \
'-i[sudo --login]' \
'-n[sudo --non-interactive]' \
'-a+[sudo specify type]:type:()' \
'-c+[sudo specify class]:class:()' \
'-g+[sudo specify group]:group:_groups' \
'-r+[sudo specify rule]:rule:()' \
'(1 * -)-V[Print version]' \
'(1 * -)-h[Print help]' \
'1:user name:_users' \
'*:::command: _normal'
